{% extends 'base.html.twig' %} {% block title %}{{ title }}{% endblock %} 
{% block body %}
  <div class="d-flex flex-column h-100 w-100 justify-content-center align-items-center">
    <h4>{{ title }}</h4>
    <span class="text-muted">{{ app.user.email }}</span>
    <div class="mt-3">
      <a href="{{ path('app_healthcheck') }}" class="btn btn-success">Healthcheck</a>
      <a href="{{ path('app_user') }}" class="btn btn-primary">User Area</a>
      <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
    </div>
    <table class="table table-sm table-striped mt-5 border shadow">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Auth1</th>
          <th scope="col">Auth2</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
        <tr>
          <td>{{ user.email }}</td>
          <td class="text-center">
            {% if user.isVerified %}
              <span class="badge text-bg-success text-success">1</span>
            {% else %}
              <span class="badge text-bg-danger text-danger">0</span>
            {% endif %}
          </td>
          <td class="text-center">
            {% if user.isTwoFactorEnabled %}
            <span class="badge text-bg-success text-success">1</span>
          {% else %}
            <span class="badge text-bg-danger text-danger">0</span>
          {% endif %}
        </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}