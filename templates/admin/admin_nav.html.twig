<header class="navbar sticky-top bg-dark flex-md-nowrap p-0 shadow" data-bs-theme="dark">
    <a class="navbar-brand col-12 col-md-3 col-lg-2 me-0 h4 text-white px-3 py-3 m-0"
        href="{{path('app_admin')}}">Portfolio</a>
    <div class="d-flex w-100 justify-content-between py-2 mx-3 mx-md-4">
        <div class="d-flex align-items-center">
            <span class="h4 m-0">{{title}}</span>
        </div>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle"
                data-bs-toggle="dropdown" aria-expanded="false">
                <img {% if user.profileImgUrl is not null %}src="{{user.profileImgUrl}}" {% else
                    %}src="https://github.com/mdo.png" {% endif %} alt="" width="32" height="32"
                    class="rounded-circle me-2">
                <strong>{{user.email}}</strong>
            </a>
            <ul class="dropdown-menu text-small shadow">
                {#<li><a class="dropdown-item" href="#">Profile</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>#}
                <li><a class="dropdown-item" href="{{path('app_logout')}}">Sign out</a></li>
            </ul>
        </div>
    </div>
</header>