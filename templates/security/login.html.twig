{% extends 'base.html.twig' %} {% block title %}{{ title }}{% endblock %} {%
block body %}
<div class="d-flex h-100 justify-content-center align-items-center">
  <form
    method="post"
    class="col-12 col-md-6 col-lg-4 border border-3 border-primary rounded p-3 shadow bg-body-tertiary"
  >
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        name="email"
        placeholder="Email address"
        required
        class="form-control border border-2 border-primary rounded"
        id="email"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="form-control border border-2 border-primary rounded"
        id="password"
      />
    </div>
    {% if error %}
    <div class="alert alert-danger" role="alert">
        
    </div>
    {% endif %}

    {% if error %}
    <div class="alert alert-danger" role="alert">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}

    <div class="mb-3 text-center">
      <span class="text-muted">No account yet?</span>
      <a href="{{ path('app_register') }}">Register here</a>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </form>
</div>
{% endblock %}