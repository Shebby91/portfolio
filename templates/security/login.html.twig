{% extends 'base_security.html.twig' %} {% block title %}{{ title }}{% endblock %} {%
block body %}
  <form method="post" class="mb-3">
    <h1 class="h4 mb-3 fw-normal">{{ title }}</h1>
    <div class="form-floating">
      <input
        type="email"
        name="email"
        placeholder="name@example.com"
        required
        class="form-control"
        id="floatingEmail"
        value="{{ last_username }}"
      />
      <label for="floatingEmail">Email address</label>
    </div>
    <div class="form-floating mb-3">
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="form-control"
        id="floatingPassword"
      />
      <a class="text-muted" href="{{ path('app_request_reset_password') }}">Forgot your password?</a>
      <label for="floatingPassword">Password</label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}"
    >
  </form>
  <div class="text-center mt-2">
    <span class="text-muted">No account yet?</span>
    <a class="text-link" href="{{ path('app_register') }}">Register</a>
  </div>
  {% if error %}
  {% if error.messageKey is not same as "An authentication exception occurred." %}
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    {{ error.messageKey|trans(error.messageData, 'security') }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
 {% endif %}
  {% endif %}
</div>
{% endblock %}