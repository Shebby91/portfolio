{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<div class="d-flex h-100 justify-content-center align-items-center">
    <form method="post" class="col-12 col-md-6 col-lg-4 border border-3 border-primary rounded p-3 shadow bg-body-tertiary">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" placeholder="Email address" class="form-control border border-2 border-primary rounded" id="email">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" placeholder="Password" class="form-control border border-2 border-primary rounded" id="password">
      </div>
      <div class="mb-3">
        <label for="repeat-password" class="form-label">Repeat password</label>
        <input type="password" placeholder="Repeat password" class="form-control border border-2 border-primary rounded" id="repeat-password">
      </div>
      <div class="mb-3 text-center">
        <span class="text-muted">Already have an account?</span>
        <a href="{{path('app_login')}}">Login here</a>
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
</div>
{% endblock %}
