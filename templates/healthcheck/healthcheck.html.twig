{% extends 'base.html.twig' %} {% block title %}{{ title }}{% endblock %} {%
block body %}
<div class="d-flex flex-column h-100 justify-content-center align-items-center">
  <h4>{{ title }}</h4>
  {% if error is defined %}
  <div class="alert alert-danger" role="alert">
    <span class="badge rounded-pill text-bg-danger">{{ error }}</span>
  </div>
  {% endif %}
  {% if connection %}
  <div class="alert alert-success" role="alert">
    <span class="badge rounded-pill text-bg-success">{{ message }}</span>
  </div>
  {% endif %}
    <div class="mt-3">
      <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <div class="mt-3">
      <a href="{{ path('app_admin') }}" class="btn btn-success">Admin</a>
    </div>
    {% endif %} 
</div>
{% endblock %}