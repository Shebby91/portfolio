{% extends 'base.html.twig' %} {% block title %}{{ title }}{% endblock %} {%
block body %}
<div class="d-flex flex-column h-100 justify-content-center align-items-center">
  <h4>{{ title }}</h4>
  <table class="table table-sm table-striped border shadow">
    <thead>
      <tr>
        <th scope="col">Connection</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          {% if connection %}
          {{ message|slice(0,24) }}
         {% endif %}
         {% if error is defined %}
          {{ error }}
        {% endif %}
      </td>

        <td class="text-center">
          {% if connection %}
          <span class="badge text-bg-success text-success">1</span>
         {% endif %}
         {% if error is defined %}
          <span class="badge text-bg-danger text-danger">0</span>
          {{ error }}
        {% endif %}
      </td>
      </tr>
    </tbody>
  </table>
  <div class="mt-3">
    <a href="{{ path('app_admin') }}" class="btn btn-secondary">Admin</a>
    <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
  </div>
</div>
{% endblock %}