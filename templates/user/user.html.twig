{% extends 'base.html.twig' %} {% block title %}{{ title }}{% endblock %} 
{% block body %}

<div class="container mt-5">
  <div class="row featurette">
    <h2 class="featurette-heading fw-normal lh-1 mb-4">Used languages:</h2>
    <div class="col-12 col-md-9 order-md-2 start-page-text-right zoom mb-3">
      {% for key,value in languages %}
      <div class="mb-3">
        <p class="lead mb-2">{{key}}</p>
        <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="{{value}}" aria-valuemin="0" aria-valuemax="{{value}}" style="--completion-width: {{value}}%;">
          <div class="progress-bar {{key|lower}}"></div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="col-12 col-md-3 order-md-1 pt-1">
      <img src="{{ asset('images/symfony_logo.png') }}" class="img-fluid rounded shadow zoom start-page-img-left" alt="66f7f4b0d15c6.jpg">
    </div>
  </div>
  <hr class="featurette-divider shadow-lg">
  <h2 class="featurette-heading fw-normal lh-1">Commits per day:</h2>
  <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
  <hr class="featurette-divider shadow-lg">
  <div class="row featurette">
    <div class="col-12 col-md-9 start-page-img-left mt-5 zoom">
